{
  "name": "@notifications/root",
  "private": true,
  "scripts": {
    "prepare": "yarn run lerna:link && lerna run prepare",
    "build:all:clean": "rimraf android/build && rimraf android/.gradle && rimraf ios/build && lerna run build:clean",
    "build:all:build": "lerna run build",
    "build_rn:watch": "cd packages/react-native && yarn run build:watch",
    "validate:all:js": "eslint ./",
    "validate:all:ts": "tsc --project ./ && tslint --project tsconfig.json -c tslint.json packages/**/**/*.ts",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:link": "lerna link && lerna exec -- yarn link",
    "lerna:clean": "lerna clean",
    "gen:reference": "node scripts/generate-typedoc.js",
    "tests_rn:packager": "cd tests_react_native && node_modules/.bin/react-native start --platforms ios,android",
    "tests_rn:packager:reset-cache": "cd tests_react_native && node_modules/.bin/react-native start --reset-cache",
    "tests_rn:test": "cd tests_react_native && jest",
    "tests_rn:android:test": "cd tests_react_native && cavy run-android",
    "tests_rn:ios:test": "cd tests_react_native && cavy run-ios --scheme=Notifee",
    "tests_rn:ios:pod:install": "cd tests_react_native && cd ios && rm -rf ReactNativeFirebaseDemo.xcworkspace && pod install && cd .."
  },
  "devDependencies": {
    "codecov": "^3.6.1",
    "cross-env": "^6.0.3",
    "detox": "14.5.1",
    "lerna": "^3.18.3",
    "typedoc": "^0.15.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "typescript": "^3.7.5"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "tests_react_native"
    ],
    "nohoist": [
      "**/chai",
      "**/chai/**",
      "**/cavy",
      "**/cavy/**",
      "**/cavy-native-reporter",
      "**/cavy-native-reporter/**",
      "**/prop-types",
      "**/prop-types/**",
      "**/patch-package",
      "**/patch-package/**",
      "**/react",
      "**/react/**",
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "shelljs": "^0.8.3"
  }
}
