{
  "name": "@notifications/root",
  "private": true,
  "scripts": {
    "prepare": "yarn run lerna:link && lerna run prepare",
    "build:all:clean": "rimraf android/build && rimraf android/.gradle && rimraf ios/build && lerna run build:clean",
    "build:all:build": "lerna run build",
    "build_rn:watch": "cd packages/react-native && yarn run build:watch",
    "validate:all:js": "eslint ./",
    "validate:all:ts": "tsc --project ./ && tslint --project tsconfig.json -c tslint.json packages/**/**/*.ts",
    "validate:all:flow": "flow",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:link": "lerna link && lerna exec -- yarn link",
    "lerna:clean": "lerna clean",
    "gen:reference": "node scripts/generate-typedoc.js",
    "tests_rn:packager:chrome": "cd tests_react_native && node_modules/.bin/react-native start --platforms ios,android",
    "tests_rn:packager:jet": "cd tests_react_native && cross-env REACT_DEBUGGER=\"echo nope\" node_modules/.bin/react-native start",
    "tests_rn:packager:jet-reset-cache": "cd tests_react_native & cross-env REACT_DEBUGGER=\"echo nope\" node_modules/.bin/react-native start --reset-cache",
    "tests_rn:android:build": "cd tests_react_native && ./node_modules/.bin/detox build --configuration android.emu.debug",
    "tests_rn:android:build-release": "cd tests_react_native && ./node_modules/.bin/detox build --configuration android.emu.release",
    "tests_rn:android:test": "cd tests_react_native && ./node_modules/.bin/detox test --configuration android.emu.debug",
    "tests_rn:android:test-reuse": "cd tests_react_native && ./node_modules/.bin/detox test --configuration android.emu.debug --reuse",
    "tests_rn:android:test-cover": "cd tests_react_native && nyc ./node_modules/.bin/detox test --configuration android.emu.debug",
    "tests_rn:android:test-cover-reuse": "cd tests_react_native && nyc ./node_modules/.bin/detox test --configuration android.emu.debug --reuse",
    "tests_rn:ios:build": "cd tests_react_native && ./node_modules/.bin/detox build --configuration ios.sim.debug",
    "tests_rn:ios:build-release": "cd tests_react_native && ./node_modules/.bin/detox build --configuration ios.sim.release",
    "tests_rn:ios:test": "cd tests_react_native && ./node_modules/.bin/detox test --configuration ios.sim.debug --loglevel warn",
    "tests_rn:ios:test-reuse": "cd tests_react_native && ./node_modules/.bin/detox test --configuration ios.sim.debug --reuse --loglevel warn",
    "tests_rn:ios:test-cover": "cd tests_react_native && node_modules/.bin/nyc ./node_modules/.bin/detox test --configuration ios.sim.debug",
    "tests_rn:ios:test-cover-reuse": "cd tests_react_native && node_modules/.bin/nyc ./node_modules/.bin/detox test --configuration ios.sim.debug --reuse --loglevel warn",
    "tests_rn:ios:pod:install": "cd tests_react_native && cd ios && rm -rf ReactNativeFirebaseDemo.xcworkspace && pod install && cd ..",
    "npm:version:release:patch": "echo '!!ðŸ”´!! RELEASE !!ðŸ”´!!' && lerna version patch --no-git-tag-version --no-push --exact --force-publish=*",
    "npm:version:release:minor": "echo '!!ðŸ”´!! RELEASE !!ðŸ”´!!' && lerna version minor --no-git-tag-version --no-push --exact --force-publish=*",
    "npm:version:release:major": "echo '!!ðŸ”´!! RELEASE !!ðŸ”´!!' && lerna version major --no-git-tag-version --no-push --exact --force-publish=*",
    "npm:publish:release": "echo '!!ðŸ”´!! RELEASE !!ðŸ”´!!' && echo '!!!!! RELEASE !!!!!!' && lerna publish from-package --dist-tag latest --no-git-reset"
  },
  "devDependencies": {
    "codecov": "^3.6.1",
    "cross-env": "^6.0.3",
    "detox": "14.5.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2",
    "typedoc": "^0.15.0",
    "@babel/core": "^7.8.3",
    "@babel/runtime": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "typescript": "^3.7.5"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "tests_react_native"
    ],
    "nohoist": [
      "detox",
      "**/detox",
      "**/detox/**",
      "**/react-native-port-patcher/**",
      "**/prop-types/**",
      "**/@react-native-firebase/private-tests-helpers",
      "**/@react-native-firebase/private-tests-helpers/**",
      "**/babel-plugin-istanbul",
      "**/babel-plugin-istanbul/**",
      "**/patch-package",
      "**/patch-package/**",
      "**/jet",
      "**/jet/**",
      "**/nyc",
      "**/nyc/**",
      "**/react",
      "**/react/**",
      "**/react-native",
      "**/react-native/**",
      "**/stacktrace-js",
      "**/stacktrace-js/**"
    ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "shelljs": "^0.8.3"
  }
}
